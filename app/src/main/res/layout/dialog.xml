<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_profile_dialog_rounded"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    android:paddingStart="20dp"
    android:paddingEnd="20dp">

    <TextView
        android:id="@+id/JudulDialog"
        style="@style/teksUbah"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Judul"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/InputDialog"
        style="@style/teksUbah"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Hint"
        android:textColorHint="@color/blackHint"
        android:importantForAutofill="no"
        tools:ignore="TextFields"
        android:layout_marginBottom="10dp"
        android:inputType="textPersonName"
        android:backgroundTint="@color/black"/>

    <TextView
        android:id="@+id/ErrorDialog"
        style="@style/teksUbah"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Error Message!"
        android:textColor="@color/red"
        android:textSize="16sp"
        android:layout_marginBottom="10dp"
        android:visibility="visible"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/BtnBatal"
            style="@style/btnBatal"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Batal"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/BtnKonfirmasi"
            style="@style/btnKonfirmasi"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Konfirmasi"/>

    </LinearLayout>

</LinearLayout>