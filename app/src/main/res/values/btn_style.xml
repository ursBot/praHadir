<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- login -->
    <style name="btnLogin" parent="Widget.AppCompat.Button">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:background">@drawable/bg_new_group</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="btnDaftar" parent="Widget.AppCompat.Button">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:background">#00FFFFFF</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- home -->
    <style name="btnNewGroup" parent="Widget.AppCompat.Button">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:background">@drawable/bg_new_group</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="btnNewKantor" parent="Widget.AppCompat.Button">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:background">@drawable/bg_new_kantor</item>
        <item name="android:textColor">@color/red_orange2</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- profile -->
    <style name="btnProfile" parent="Widget.AppCompat.Button">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:background">@drawable/bg_new_group</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginStart">50dp</item>
        <item name="android:layout_marginEnd">50dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <!-- button global -->
    <style name="btnBatal" parent="Widget.AppCompat.Button">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:background">@drawable/bg_btn_batal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
    </style>

    <style name="btnKonfirmasi" parent="Widget.AppCompat.Button">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:background">@drawable/bg_btn_konfirmasi</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
    </style>

</resources>